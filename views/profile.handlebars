<div class="row">
  <div class="col-auto">
    <h2>Welcome to the Blog!!!, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">

    <h3>Here you can write somthing:</h3>

    <form class="form new-post-form">
      <div class="form-group">

        <label for="post-name">Ledger name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />

      </div>
      
      <div class="form-group">
        <label for="post-desc">information:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>

      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if post.length}}
  <div class="col-md-6 post-list">

    <h3>Programs :</h3>

    {{#each post as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>

      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Remove</button>

      </div>
    </div>
    {{/each}}

  </div>
  
  {{/if}}
</div>

<script src="./js/profile.js"></script>
