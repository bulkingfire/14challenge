
{{#each post as |post| }}

<div class="row mb-4 post">
  <div style= 'background-color: rgb(82, 71, 71);' class="col-md-8">

    <h2>
     
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    </div>
<div style= 'background-color: rgb(209, 211, 102);' class="col-md-4">


    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>

  </div>

  </div>
  <div style= 'background-color: rgb(145, 98, 127);' class="row mb-4 post">

  
  <div class="col-md-7">
    <p>
      {{post.description}}
      
    </p>
  </div>
</div>
{{/each}}
